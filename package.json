{
    "name": "lazy-var",
    "version": "3.0.3-0",
    "description": "Lazy initialize values",
    "main": "./lib/cjs/index.js",
    "module": "./lib/es/index.js",
    "types": "./lib/types/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "default": "./lib/es/index.js",
                "types": "./lib/types/index.d.ts"
            },
            "require": {
                "default": "./lib/cjs/index.js",
                "types": "./lib/types/index.d.ts"
            }
        },
        "./AsyncFunctionConstructor": {
            "types": "./lib/types/AsyncFunctionConstructor.d.ts"
        },
        "./AsyncLazy": {
            "types": "./lib/types/AsyncLazy.d.ts"
        },
        "./index": {
            "types": "./lib/types/index.d.ts"
        },
        "./Initializer": {
            "types": "./lib/types/Initializer.d.ts"
        },
        "./isAsyncFunction": {
            "types": "./lib/types/isAsyncFunction.d.ts"
        },
        "./LazyBase": {
            "types": "./lib/types/LazyBase.d.ts"
        },
        "./SyncFunctionConstructor": {
            "types": "./lib/types/SyncFunctionConstructor.d.ts"
        },
        "./SyncLazy": {
            "types": "./lib/types/SyncLazy.d.ts"
        }
    },
    "scripts": {
        "test": "npx vitest run",
        "test:lite": "npx vitest -c vitest.node.config.ts run",
        "build": "npm run type-check && npx vite build",
        "lint": "npx eslint src",
        "lint-fix": "npx eslint src --fix",
        "prepack": "npm run build",
        "postversion": "npx bun run read-version.ts --run-command",
        "format": "npx prettier --write .",
        "type-check": "npx run-s type-check:*",
        "type-check:browser": "npx tsc --project ./tsconfig.browser.json --noEmit --skipLibCheck",
        "type-check:node": "npx tsc --project ./tsconfig.node.json --noEmit --skipLibCheck",
        "docs:ref": "npx typedoc --options typedoc.json",
        "docs:dev": "vitepress dev",
        "docs:build": "vitepress build",
        "docs:preview": "vitepress preview"
    },
    "files": [
        "lib/*",
        "lib/**/*"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/and3k5/lazy-var.js.git"
    },
    "keywords": [
        "lazy",
        "initialize",
        "variable"
    ],
    "author": "Anders K",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/and3k5/lazy-var.js/issues"
    },
    "homepage": "https://github.com/and3k5/lazy-var.js#readme",
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/node": "^24.10.0",
        "@typescript-eslint/eslint-plugin": "^8.46.3",
        "@vitest/browser-playwright": "^4.0.7",
        "bun": "^1.3.1",
        "docsify-cli": "^4.4.4",
        "eslint": "^9.39.1",
        "jiti": "^2.6.1",
        "jsdoc-babel": "^0.5.0",
        "jsdoc-to-markdown": "^9.1.3",
        "jsdom": "^27.1.0",
        "npm-run-all2": "^8.0.4",
        "prettier": "^3.6.2",
        "typedoc": "^0.28.14",
        "typedoc-plugin-markdown": "^4.9.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.3",
        "vite": "^7.2.2",
        "vite-plugin-dts": "^4.5.4",
        "vitepress": "^2.0.0-alpha.12",
        "vitest": "^4.0.7"
    },
    "engines": {
        "node": ">=24.11.0"
    },
    "engineStrict": true,
    "volta": {
        "node": "24.11.0"
    }
}
